#page-categories-list {
    .r-title {
        display: block;
        width: 100%;
        height: 50px;
        line-height: 50px;
        color: #000;

        &.recommend {
            margin-top: 10px;
            border-bottom: 1px solid @gray-dark;
        }

        &.hotsell {
            padding-bottom: 0;
            border-bottom: 1px solid @gray-dark;
        }
    }

    .content {
        width: @page-width;
        .center();
        display: flex;
        justify-content: space-between;

        .filter {
            width: 220px;
        }
    }
}

.list-view {
    flex: 1;
    margin-left: 20px;
}


.model-block {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 20px;

    .mb-item {
        display: flex;
        flex-direction: column;
        justify-content: center;
        .size(120px, 120px);
        margin-right: 20px;
        margin-bottom: 20px;
        border: 1px solid @gray-dark;
        text-align: center;
        overflow: hidden;

        a {
            display: inline-block;
        }

        &:hover{
            box-shadow: 0 0 10px @gray-darker;
          }
    }
}
