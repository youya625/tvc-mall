
.rating {
    position: relative;
    top: 3px;
    width: 80px;
    height: 15px;
    display: inline-block;
    overflow: hidden;
    background: url(../../content/images/star.png) repeat-x scroll 0 -16px transparent;

    .start {
        display: block;
        height: 15px;
        text-indent: -9999px;
        background: url(../../content/images/star.png) repeat-x scroll 0 0 transparent;
    }
}
