@import "../../variables";
@import "../../common";
@import "common";
//标题
.module-title(@border-top-color: #000) {
    @width: 100%;
    position: relative;
    width: @width;
    height: 50px;
    border-top: 1px solid @border-top-color;
    border-bottom: 1px solid @nomal-bg-color;
    background-color: #fff;
    font: @light-font;
    .font(25px, #000);
    text-indent: 27px;
    line-height: 52px;

    //链接
    a {
        color: @gray-darker;
        font: @light-font;
        font-size: 17px;
        line-height: 52px;
        position: absolute;
        right: 20px;
    }
}