#page-brand-list {
    .r-title {
        display: block;
        width: 100%;
        height: 50px;
        line-height: 50px;
        color: #000;

    }

    .content {
        width: @page-width;
        .center();
        display: flex;
        justify-content: space-between;

        .filter {
            width: 220px;
        }
    }


    .list-view {
        flex: 1;
        margin-left: 20px;
    }


    .model-block {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        margin-top: 20px;
    }
    //左右切换按钮
    .slide-left, .slide-right {
        position: absolute;
        top: 40%;
        display: block;
        z-index: 100;
        opacity: 0.7;
        border: 1px solid #eeeeee;

        &:hover {
            opacity: 1;
        }
    }

    .slide-left {
        left: 0;
    }

    .slide-right {
        right: 0;
    }

    //品牌列表
    .model-list {
        .row-wrap {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            margin-top: 20px;
            border-bottom: 1px solid @gray-dark;
        }

        .empty:hover {
            box-shadow: none;
        }

        &.model-list {
            .mb-item {
                border-color: transparent;
            }
        }
    }

    .mb-item {
        display: flex;
        flex-direction: column;
        justify-content: center;
        .size(170px, 170px);
        margin-bottom: 20px;
        border: 1px solid @gray-dark;
        text-align: center;
        overflow: hidden;

        a {
            display: inline-block;
        }

        &:hover {
            box-shadow: 0 0 10px @gray-darker;
        }
    }
}
