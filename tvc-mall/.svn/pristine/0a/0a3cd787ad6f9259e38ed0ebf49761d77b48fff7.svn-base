@import "../partials/mixins";


#product-detail {
    .content {
        width: @page-width;
        .center();
    }

    .site-top-nav {
        position: fixed;
    }
    //商品属性
    .p-property {
        display: flex;
        justify-content: space-between;
        width: 100%;
        //商品图片
        .p-pictures {
            width: 500px;

            .big-pic-wrap {
                .size(500px, 500px);
                border: 1px solid @gray-dark;

                img {
                    max-width: 500px;
                }
            }
            //放大镜提示
            .zoom-tip {
                width: 502px;
                height: 25px;
                line-height: 25px;
                background-color: #f5f5f5;
                text-align: center;
            }
            //商品小图轮播图
            .pics-slider-wrap {
                margin-top: 15px;
                .size(100%, auto);
                //轮播图
                .carousel {
                    position: relative;

                    .images-block {
                        display: flex;
                        justify-content: flex-start;

                        .ib-item {
                            margin: 0 5.6px;
                            border: 1px solid @gray-dark;

                            img {
                                max-width: 70px;
                            }

                            &.select {
                                border-color: @nomal-color;
                            }
                        }
                    }
                }

                .slide-left, .slide-right {
                    display: block;
                    position: absolute;
                    top: 22px;
                    border: 1px solid @gray-dark;
                }

                .slide-left {
                    left: 0;
                }

                .slide-right {
                    right: 0;
                }
            }

            .image-tips {
                margin-top: 15px;

                .view-all {
                    margin-left: 15px;
                    color: #2c8ccd;
                }

                .down-images {
                    color: #2c8ccd;
                }
            }
        }
        //属性详情
        .pp-detail {
            width: 675px;

            .lable {
                display: inline-block;
                width: 65px;
                text-align: right;
                font: @nomal-font;
                color: #000;
            }

            .detail-header {
                border-bottom: 1px solid @gray-dark;
                padding-bottom: 30px;
                //标题
                .dh-title {
                    font: @nomal-font;
                    font-size: 20px;
                    color: #000;
                }
                //评分
                .rating-wrap {
                    .r-lable {
                        color: #000;
                    }

                    .rating {
                        .rating();
                    }

                    .r-reviews {
                        & a:hover {
                            color: @nomal-color;
                        }
                    }
                }

                .detail-tips {
                    margin-top: 5px;

                    .tips-item {
                        color: #000;
                        margin-right: 30px;
                    }
                }
            }
            //颜色列表
            .ppd-color-wrap {
                display: flex;
                justify-content: flex-start;
                margin-top: 25px;

                .c-lable {
                    line-height: 40px;
                }

                .color-block {
                    margin-left: 15px;

                    a {
                        display: inline-block;
                        margin: 0 5px 10px 0;
                        border: 1px solid #eee;
                        width: 40px;
                        height: 40px;


                        img {
                            max-width: 40px;
                        }

                        &.select {
                            border-color: @nomal-color;
                        }
                    }
                }
            }
            //其他属性
            .other-attributes {
                display: flex;
                justify-content: flex-start;

                .attributes-list {
                    margin-left: 15px;

                    .attibutes-item {
                        margin-right: 5px;
                        padding: 2px;
                        border: 1px solid @gray-darker;

                        &.select, &:hover {
                            border-color: @nomal-color;
                        }
                    }
                }
            }
            //批量购买按钮
            .bulk-buy-btn {
                margin: 20px 0 0 80px;
                background-color: #2c8ccd;
                color: #fff;
                border: none;
                font-size: 15px;
                height: 20px;
                line-height: 20px;
            }
        }

        .detail-item {
            display: flex;
            justify-content: flex-start;
            margin-top: 15px;

            .lable-price {
                line-height: 26px;
            }

            .lable-count {
                line-height: 25px;
            }

            .price-info {
                margin-left: 15px;

                .new-price {
                    color: @nomal-color;
                    font: @nomal-font;
                    font-size: 22px;
                }
            }

            .buy-count {
                margin-left: 15px;

                .icon-web {
                    display: inline-block;
                    vertical-align: middle;
                }

                .count-input {
                    width: 50px;
                    vertical-align: middle;
                    text-align: center;
                }
            }
        }
        //购买信息
        .ppd-buy-info {
            margin-left: 80px;
            margin-top: 20px;

            .add-cart {
                .icon-cart {
                    font-size: 16px;
                }

                background-color: @nomal-color;
                font: @nomal-font;
                font-size: 20px;
                color: #fff;
                border: none;
            }

            .check-out {
                margin-left: 20px;
                vertical-align: bottom;
                text-decoration: underline;
            }

            .icon-triangle-right {
                display: inline-block;
                vertical-align: bottom;
                text-decoration: none;
                font-size: 18px;
            }

            .ship-info {
                margin-top: 20px;
                position: relative;

                .icon-air {
                    display: inline-block;
                    position: relative;
                    top: 2px;
                }

                .ship-price {
                    font: @nomal-font;
                    color: @nomal-color;
                }
            }

            .more-ship {
                text-decoration: underline;
            }
            //价格区间
            .price-interval {
                margin-top: 20px;

                .interval-tips {
                    color: #000;

                    .tips-item {
                        margin-right: 40px;
                    }

                    a {
                        text-decoration: underline;
                    }
                }

                .pi-data {
                    display: flex;
                    justify-content: flex-start;
                    width: 450px;
                    margin-top: 10px;


                    .data-item {
                        border: 1px solid @gray-dark;
                        margin-left: -1px;
                        flex: 1;

                        .item-title {
                            height: 28px;
                            width: 75px;
                            line-height: 28px;
                            color: #000;
                            border-bottom: 1px solid @gray-dark;
                            text-align: center;
                        }

                        .item-content {
                            height: 28px;
                            line-height: 28px;
                            width: 75px;
                            text-align: center;
                            color: @nomal-color;


                            &.delete {
                                color: #000;
                                text-decoration: line-through;
                            }
                        }

                        &.select {
                            background-color: #fffcc9;
                        }
                    }
                }
            }
        }
    }

    .p-info {
        display: flex;
        justify-content: space-between;
        margin-top: 50px;
        padding-bottom: 30px;
        //左侧广告
        .aside-left {
            width: 210px;
            padding-top: 32px;

            .sales-contact {
                width: 100%;
                border: 1px solid @gray-dark;
                height: 144px;
                color: #000;


                .icon-web {
                    display: inline-block;
                }

                .icon-tel {
                    vertical-align: bottom;
                }

                .title {
                    margin-top: 19px;
                    margin-left: 12px;
                }

                .contact-link {
                    display: block;
                    margin-top: 15px;
                    margin-left: 12px;
                }
            }

            .pay-images {
                width: 100%;
                border: 1px solid @gray-dark;
                margin-top: 20px;
                padding-bottom: 20px;

                .trustlink {
                    display: block;
                    width: 100%;
                    margin-top: 18px;
                    text-align: center;
                }

                .pay-img {
                    width: 100%;

                    .pic-pay {
                        display: block;
                        margin: 0 auto;
                    }
                }
            }

            .aside-link {
                display: block;
                margin-top: 20px;

                img {
                    max-width: 210px;
                }
            }
        }
        //右侧内容
        .info-right {
            width: 960px;

            .content-title {
                margin-top: 10px;
                font: @nomal-font;
                height: 35px;
                line-height: 35px;
                text-indent: 22px;
                color: #000;
                width: 100%;
                background-color: @content-bg-color;
            }

            .tab-wrap {
                .clearfix();
                background-color: #fff;
                border-bottom: 2px solid @nomal-color;
                padding-top: 32px;
                z-index: 8999;

                li {
                    a {
                        border-radius: 0;
                    }

                    &.active {
                        a {
                            background-color: @nomal-color;
                        }
                    }
                }
            }

            #main-info {
                .detail-images-list {
                    display: flex;
                    flex-flow: wrap;
                    margin-top: 20px;

                    img {
                        display: block;
                        padding: 0;
                        margin: 0;
                        max-width: 960px;
                    }
                }
            }

            #reviews-list {
                .section {
                    padding: 14px 8px;
                    border-bottom: 1px solid @gray-dark;
                    overflow: hidden;
                }
                //评分统计条
                .star-number {
                    float: right;
                    width: 340px;

                    .star-name {
                        margin-right: 3px;
                        color: #000;
                        vertical-align: middle;
                        width: 66px;
                        display: inline-block;
                        text-align: right;
                    }

                    .bar {
                        display: inline-block;
                        width: 135px;
                        height: 14px;
                        background: #ffebe0;
                        vertical-align: middle;
                    }

                    .point {
                        display: inline-block;
                        background: #fda972;
                        height: 14px;
                    }

                    .point-bar {
                        margin-left: 10px;
                        vertical-align: middle;
                    }
                }
                //星星相关
                .rating-big {
                    color: #000;
                    vertical-align: middle;
                }

                .star-img-big {
                    background: url(../../content/images/star_big.png) 0 -20px repeat-x;
                    width: 100px;
                    height: 19px;
                    display: inline-block;
                    overflow: hidden;
                    vertical-align: middle;
                    margin-right: 10px;

                    span {
                        background: url(../../content/images/star_big.png) 0 0 repeat-x;
                        display: block;
                        text-indent: -9999px;
                    }
                }

                .rev-num {
                    vertical-align: middle;
                }
                //评论---------------start-------------
                .reviews-list {
                    .r-item {
                        display: flex;
                        justify-content: flex-start;
                        margin-top: 25px;
                        padding-bottom: 30px;
                        border-bottom: 1px solid @gray-dark;
                        //头像用户名等信息
                        .user-info {
                            margin-left: 25px;
                            color: #000;

                            .avatar {
                                display: block;

                                img {
                                    max-width: 75px;
                                }
                            }

                            .user-position {
                                margin-top: 5px;
                            }
                        }
                        //评论主要信息
                        .r-info {
                            flex: 1;
                            margin-left: 20px;
                            color: #000;

                            .r-content {
                                color: #000;
                                font-size: 17px;
                                margin-top: 5px;
                            }

                            .r-date {
                                margin-top: 10px;
                                color: @gray-darker;
                            }
                            //评论投票
                            .r-vote {
                                display: flex;
                                justify-content: flex-end;
                                width: 85%;

                                .tip-sorry {
                                    line-height: 30px;
                                    margin-right: 10px;
                                    color: red;
                                }

                                .tip-think {
                                    line-height: 30px;
                                    margin-right: 10px;
                                    color: green;
                                }

                                span {
                                    display: inline-block;
                                    vertical-align: middle;
                                }

                                .btn {
                                    font-size: 14px;
                                    margin-right: 10px;
                                }
                            }
                        }
                    }
                }

                .all-reviews-link {
                    display: block;
                    text-align: right;
                    margin-top: 15px;
                    padding-bottom: 20px;
                    color: #2c8ccd;
                }

                .rating-wrap {
                    display: flex;
                    justify-content: flex-start;

                    .rating-item {
                        margin-right: 10px;
                    }
                }
                //评论---------------end----------
            }

            #product-requery {
                .inquery-input-area {
                    height: 300px;
                    width: 100%;
                    vertical-align: top;
                    outline: none;
                    resize: none;
                    margin-top: 20px;
                }

                .submit-inquery {
                    display: inline-block;
                    float: right;
                    margin-top: 20px;
                    background-color: @nomal-color;
                    color: #fff;
                    border: none;
                }
            }
        }
    }
}
