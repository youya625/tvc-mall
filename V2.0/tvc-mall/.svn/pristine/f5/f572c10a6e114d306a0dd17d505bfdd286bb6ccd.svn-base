@font-face {
    font-family: 'tvcicon';
    src:
        url('fonts/tvcicon.ttf?wvq2l1') format('truetype'),
        url('fonts/tvcicon.woff?wvq2l1') format('woff'),
        url('fonts/tvcicon.svg?wvq2l1#tvcicon') format('svg');
    font-weight: normal;
    font-style: normal;
}

i {
    /* use !important to prevent issues with browser extensions that change fonts */
    font-family: 'tvcicon' !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;

    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

