
@import "../../variables";
@import "../../common";
@import "common";



//商品1，一般商品
.list-gadget-item-1() {
    @product-title-size: 13px; //一般商品标题字体大小
    @product-hover-color: #fff; //商品选择边框颜色
    @product-hover-shadow: 0 0 15px @gray-darker; //商品选择边框阴影

    @height: 265px;
    @width: 200px;
    @padding: 15px;
    @border-width: 1px;
    padding: @padding;
    width: @width - 2 * @padding - @border-width;
    height: @height - 2 * @padding - @border-width;
    position: relative;

    img {
        text-align: center;
        width: 150px;
        height: 150px;
        transition: transform 0.2s linear;

        &:hover {
            transform: translateX(-5px);
        }
    }

    .pro-title {
        width: @width - 2 * @padding - @border-width;
        height: 33px;
        overflow: hidden;
        line-height: 10px;
        text-align: left;

        a {
            font-size: @product-title-size;
            line-height: 16px;
            color: #000;
        }
    }

    .rating {
        width: 80px;
        height: 15px;
        display: inline-block;
        overflow: hidden;
        margin: 0;
        margin: 4px 0 0 2px;
        background: url(../../../images/star.png) repeat-x scroll 0 -16px transparent;

        .start {
            display: block;
            height: 15px;
            text-indent: -9999px;
            background: url(../../../images/star.png) repeat-x scroll 0 0 transparent;
        }
    }

    .c-count {
        display: inline-block;
        color: @gray-darker;
        position: relative;
        bottom: 3px;
        font-size: 12px;

        &:hover {
            text-decoration: underline;
        }

        &:before {
            content: "( ";
        }

        &:after {
            content: " )";
        }
    }

    .price {
        span:first-child {
            font-size: 12px;
            color: #8a8a8c;
        }

        span:last-child {
            font-size: 14px;
            color: @nomal-color;
        }
    }

    &:hover {
        border-color: @product-hover-color;
        box-shadow: @product-hover-shadow;
        z-index: 20;
    }
}

//商品2，无价格
.list-gadget-item-2() {
    @height: 305px;
    @width: 240px;
    @padding: 10px;
    @border-width: 1px;
    @product-title-size: 13px; //一般商品标题字体大小
    @product-hover-color: #fff; //商品选择边框颜色
    @product-hover-shadow: 0 0 15px @gray-darker; //商品选择边框阴影
    padding: @padding;
    width: @width - 2 * @padding - @border-width;
    height: @height - 2 * @padding - @border-width;


    img {
        text-align: center;
        width: 210px;
        height: 210px;
        transition: transform 0.2s linear;

        &:hover {
            transform: scale(1.05, 1.05);
        }
    }

    .pro-title {
        width: @width - 2 * @padding - @border-width - 10;
        height: 15px;
        overflow: hidden;
        line-height: 10px;
        text-align: center;
        text-indent: 10px;
        margin-top: 20px;

        a {
            .font(@product-title-size, #000, 16px);
        }
    }

    .pro-about {
        width: @width - 2 * @padding - @border-width - 10;
        height: 17px;
        line-height: 10px;
        text-align: center;
        .text-overflow();
        text-indent: 10px;
        margin-top: 0;
        .font(12px, #979798, 16px);
    }


    &:hover {
        position: relative;
        border-color: @product-hover-color;
        box-shadow: @product-hover-shadow;
        z-index: 20;
    }
}

//商品3，有价格和订单数
.list-gadget-item-3() {
    @height: 305px;
    @width: 240px;
    @padding: 10px;
    @border-width: 1px;
    @product-title-size: 13px; //一般商品标题字体大小
    @product-hover-color: #fff; //商品选择边框颜色
    @product-hover-shadow: 0 0 15px @gray-darker; //商品选择边框阴影
    padding: @padding;
    width: @width - 2 * @padding - @border-width;
    height: @height - 2 * @padding - @border-width;
    position: relative;

    img {
        text-align: center;
        width: 210px;
        height: 210px;
    }

    .pro-price {
        height: 60px;
        padding: 5px;
        margin: auto;
        float: left;
        width: 135px;
        margin-top: 15px;

        div:first-child {
            font-size: 22px;
            color: #000;
        }

        del {
            color: #95989a;
            font-size: 14px;
        }
    }

    .pro-order {
        position: relative;
        bottom: 45px;
        right: 5px;
        float: right;
        width: 100px;
        height: 25px;
        text-align: center;
        font-size: 14px;
        color: #000;
    }

    &:hover {
        position: relative;
        border-color: @product-hover-color;
        box-shadow: @product-hover-shadow;
        z-index: 20;
    }
}

//商品4，列表页商品
.list-gadget-item-4() {
    @product-hover-color: #fff; //商品选择边框颜色
    @product-hover-shadow: 0 0 15px @gray-darker; //商品选择边框阴影
    @padding: 20px;
    position: relative;
    width: 220px;
    /*height: 400px;*/
    padding: @padding;
    margin-top: 20px;

    .icon-topleft {
        position: absolute;
        top: 20px;
        left: 0;
        z-index: 10;
    }

    .icon-topright {
        position: absolute;
        top: 0;
        right: 0;
        z-index: 10;

        .num-wrap {
            position: relative;
            top: -3px;
            width: 32px;
            text-align: center;
            display: inline-block;
            font-size: 22px;
            color: #fff;
            font-weight: 600;
        }
    }

    .icon-btm {
        margin-top: 5px;
    }

    .img-wrap {
        text-align: center;
        width: 220px;
        height: 220px;
        overflow: hidden;

        img {
            transition: transform 0.2s linear;

            &:hover {
                transform: translateX(-5px);
            }
        }
    }

    .pro-title {
        padding-top: 10px;
        width: 100%;
        height: 55px;
        overflow: hidden;
        line-height: 10px;
        text-align: left;

        a {
            font-size: 15px;
            line-height: 18px;
            color: #000;

            &:hover {
                color: @nomal-color;
            }
        }
    }

    .rating {
        width: 80px;
        height: 15px;
        display: inline-block;
        overflow: hidden;
        margin: 4px 0 0 2px;
        background: url(../../../images/star.png) repeat-x scroll 0 -16px transparent;

        .start {
            display: block;
            height: 15px;
            text-indent: -9999px;
            background: url(../../../images/star.png) repeat-x scroll 0 0 transparent;
        }
    }

    .c-count {
        display: inline-block;
        font-size: 13px;

        &:hover {
            text-decoration: underline;
        }

        &:before {
            content: "( ";
        }

        &:after {
            content: " )";
        }
    }

    .price {
        margin-top: 5px;
        font-size: 19px;

        .new-price {
            color: @nomal-color;
            font-weight: 600;
        }
    }

    &:hover {
        border-color: @product-hover-color;
        box-shadow: @product-hover-shadow;
        z-index: 20;
    }

    .p-wholesale {
        margin-top: 5px;
        font-size: 14px;
        color: #000;

        .price {
            font-size: 14px;
            color: #fc7f87;
        }
    }

    &:hover {
        .p-moreinfo {
            display: block;
            border-top: none;
            border-color: @product-hover-color;
            box-shadow: 0 8px 15px @gray-darker;
        }
    }
    //隐藏商品信息
    .p-moreinfo {
        position: absolute;
        left: 0;
        padding: @padding;
        padding-top: 0;
        display: none;
        margin-top: 5px;
        background-color: #fff;

        .color-block {
            display: flex;
            flex-flow: wrap;
            flex-direction: row;
            justify-content: flex-start;
            margin-top: 5px;

            a {
                display: inline-block;
                margin-right: 2px;
                margin-bottom: 8px;
                border: 1px solid @gray-dark;
                width: 40px;
                height: 40px;
            }
        }
    }

    .btn-buy {
        display: block;
        background-color: @nomal-color;
        color: #fff;
        border: none;
    }
}
