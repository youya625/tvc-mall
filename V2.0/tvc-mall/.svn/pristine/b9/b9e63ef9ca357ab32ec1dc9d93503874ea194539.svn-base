
@import "mixins";

.products-filter-1 {
    border: 1px solid @nomal-bg-color;

    .filter-title {
        padding: 10px 25px;
        font: @light-font;
        color: #000;
        font-size: 17px;
        background-color: #f7f7f7;
        border-bottom: 1px solid @nomal-bg-color;
    }

    .filter-items {
        padding-left: 22px;
        padding-right: 15px;

        li {
            padding: 10px 0;
            border-bottom: 1px solid @nomal-bg-color;

            a {
                &:hover {
                    color: @nomal-color;
                }
            }
        }
    }
}
